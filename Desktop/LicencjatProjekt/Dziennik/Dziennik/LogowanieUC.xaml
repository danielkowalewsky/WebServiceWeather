<UserControl x:Class="Dziennik.LogowanieUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dziennik"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Button x:Name="logujButton" Content="Loguj" HorizontalAlignment="Left" Height="46" Margin="325,350,0,0" VerticalAlignment="Top" Width="222" Click="logujButton_Click"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="41" Margin="325,204,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="185" GotFocus="loginTextBox_GotFocus" LostFocus="loginTextBox_LostFocus"/>
        <Label x:Name="glownyLabel" Content="Aby zalogować się do serwisu &#xA;musisz wpisać swój login i hasło." HorizontalAlignment="Left" Height="64" Margin="284,127,0,0" VerticalAlignment="Top" Width="226" FontSize="15"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="40" Margin="325,260,0,0" VerticalAlignment="Top" Width="185" Password="Hasło"/>

    </Grid>
</UserControl>
